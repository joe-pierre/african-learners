{% extends 'base.html.twig' %}

{% block title "Connexion | "~website_name %}

{% block body %}
	<section class="my-5 container">
		<form method="post">
			<div class="col-md-6 mx-auto">
				<div class="mb-3 text-center">
					<h1 class="h3 font-weight-normal">Connectez-vous !</h1>
				</div>

				{% if error %}
					<div class="alert alert-error mb-2 rounded-top">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}

				<div class="form-group">
					<label for="eamil">Email</label>
					<input type="email" value="{{ last_username }}" name="email" id="eamil" class="form-control" autocomplete="email" required autofocus>
				</div>

				<div class="form-group">
					<label for="password">Mot de passe</label>
					<input type="password" name="password" id="password" class="form-control" autocomplete="current-password" required>
				</div>

				<div class="form-group d-flex justify-content-between">
					<div class="form-check">
						<input class="form-check-input" type="checkbox" name="_remember_me" id="remember_me">
						<label class="form-check-label" for="remember_me">Se souvenir de moi</label>
					</div>
					<a href=" {{path('app_forgot_password_request')}} ">Mot de passe oublié !</a>
				</div>

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				<button class="btn btn-primary btn-block" type="submit" formnovalidate>Connexion</button>

				<p class="mt-3 mb-5 text-center text-muted">Pas encore inscrit ?
					<a href="{{ path('app_register') }}">créer un compte !</a>
				</p>
			</div>
		</form>
	</section>
{% endblock %}
