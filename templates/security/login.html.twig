{% extends 'base.html.twig' %}

{% block title "Connexion | "~website_name %}

{% block body %}
	<section class="my-5 container">
		<div class="mx-auto col-md-6">
			<form method="post">

				<div class="mb-3 text-center">
					<h1 class="h3 font-weight-normal">Connectez-vous !</h1>
				</div>
				{% if error %}
					<div class="alert alert-error">
						{{ error.messageKey|trans(error.messageData, 'security') }}
					</div>
				{% endif %}

				<div class="mb-3">
					<label for="exampleInputEmail1" class="form-label">Email</label>
					<input type="email" name="email" value="{{ last_username }}" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" required autofocus>
					<p id="emailHelp" class="form-text">Vos informations resteront confidentielles.</p>
				</div>
				<div class="mb-3">
					<label for="exampleInputPassword1" class="form-label">Mot de passe</label>
					<input type="password" name="password" class="form-control" id="exampleInputPassword1" autocomplete="current-password" required>
				</div>
				<div class="mb-3 form-check d-flex justify-content-between">
					<div>
						<input class="form-check-input" type="checkbox" name="_remember_me" id="remember_me">
						<label class="form-check-label" for="remember_me">Se souvenir de moi</label>
					</div>

					<div>
						<a href=" {{path('app_forgot_password_request')}} ">Mot de passe oublié !</a>
					</div>
				</div>

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
				<button type="submit" class="btn btn-primary w-100" formnovalidate>Connexion</button>

				<p class="mt-3 mb-5 text-center text-muted">Pas encore inscrit ?
					<a href="{{ path('app_register') }}">créer un compte !</a>
				</p>
			</form>

		</div>
	</section>
{% endblock %}
