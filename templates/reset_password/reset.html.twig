{% extends 'base.html.twig' %}

{% block title "Réinitialiser mon mot de passe" %}

{% block body %}

	<section class="mb-4 container">
		<div class="row">
			<div class="mt-3 col-md-6 mx-auto">
				<div class="my-5">

					<h1 class="mb-5 h3 text-center">Réinitialisation du mot de passe</h1>

					{{ form_start(resetForm) }}
					{{ form_row(resetForm.plainPassword) }}
					<button type="submit" class="btn btn-primary btn-block">Réinitialiser</button>
					{{ form_end(resetForm) }}

					<div class="mt-4 text-center">
						<a href="{{ path('app_login') }}">Revenir à la page de connexion !</a>
					</div>
				</div>
			</div>
		</div>
	</section>

{% endblock %}
