{% extends 'base.html.twig' %}

{% block title "Réinitialiser mon mot de passe" %}

{% block body %}

	<section class="mb-5 container">
		<div class="row">
			<div class="mt-3 col-md-6 mx-auto">
				<div class="my-5">
					{% for flashError in app.flashes('reset_password_error') %}
						<div class="alert alert-error mb-3 rounded" role="alert">{{ flashError }}</div>
					{% endfor %}

					<div class="mb-3 text-center">
						<h3>Réinitialisation de mot de passe</h3>
					</div>
					<div class="mb-5 h6 blockquote text-center text-muted">
						<small>
							Entrez votre adresse email pour recevoir le lien de réinitialisation.
						</small>
					</div>

					{{ form_start(requestForm) }}
					{{ form_row(requestForm.email, {label: '', 'attr': {'class': ''} }) }}

					<button type="submit" class="btn btn-primary btn-block">Recevoir le lien de réinitialisation</button>
					{{ form_end(requestForm) }}
				</div>
			</div>
		</div>
	</section>
{% endblock %}
