{% extends 'base.html.twig' %}

{% block title "Cours | "~website_short_name %}

{% block body %}

	<section class="container">
		<h1>Cours</h1>

		<table class="table">
			<tbody>
				<tr>
					<th>Titre</th>
					<td>{{ course.title }}</td>
				</tr>
				<tr>
					<th>Description</th>
					<td>{{ course.description }}</td>
				</tr>
			</tbody>
		</table>

		<div class="container embed-responsive embed-responsive-1by1">
			<iframe class="embed-responsive-item" src=" {{ vich_uploader_asset(course, 'courseFile') }} #toolbar=0"></iframe>
		</div>


		<div class="row"></div>

		{% if app.user and app.user.roles[0] is same as("ROLE_COMMISSION_MEMBER")  %}

		<div class="mt-5 d-flex justify-content-between">
			<div>
				<a class="mt-3 btn btn-outline-primary" href="{{ path('app_edit_course', {'id': course.id}) }}">Modifier</a>
			</div>

			<form method="post" action="{{ path('app_delete_course', {'id': course.id}) }}" onsubmit="return confirm('Etes-vous sÃ»r de vouloir supprimer ce cours ? Cette action est irreversible');">
				<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ course.id) }}">
				<button class="m-3 btn btn-outline-danger">&times; Supprimer</button>
			</form>
		</div>

		{% endif %}

	</section>
{% endblock %}
