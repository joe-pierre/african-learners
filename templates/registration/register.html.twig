{% extends 'base.html.twig' %}

{% block title "Créer un compte" %}

{% block body %}

	<section class="container">
		<div class="row">
			<div class="col-md-6 mx-auto">
				{% for flashError in app.flashes('verify_email_error') %}
					<div class="alert alert-error rounded mb-3" role="alert">{{ flashError }}</div>
				{% endfor %}

				<h1 class="my-5 text-center">Créer un compte</h1>

				{{ form_start(registrationForm) }}
				<div class="row">
					<div class="col-md-6">
						{{ form_row(registrationForm.firstName, {label: 'Prénom(s)'}) }}
					</div>
					<div class="col-md-6">
						{{ form_row(registrationForm.lastName, {label: 'Nom'}) }}
					</div>
				</div>

				{{ form_row(registrationForm.email) }}

				{# <div class="form-group">
				<div class="input-group mx-auto"> #}
				{{ form_row(registrationForm.plainPassword, {label: 'Mot de passe', 'attr': {'class': ''}}) }}
				{# <div class="input-group-append">
					<a href="#" class="pt-3 d-flex align-items-center" onclick="event.preventDefault();">
						<i class="fa fa-eye-slash" aria-hidden="true"></i>
					</a>
				</div> #}
				{# </div>
				</div> #}
				{{ form_row(registrationForm.agreeTerms) }}
					<button type="submit" class="btn btn-primary btn-lg btn-block" formnovalidate> Créer un compte</button>

				<p class="my-4 text-center text-muted">
					Vous avez déjà un compte ?
					<a href=" {{path('app_login')}} ">Se connecter !</a>
				</p>
				{{ form_end(registrationForm) }}
			</div>
		</div>
	</section>

{% endblock %}
