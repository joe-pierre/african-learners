<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="shortcut icon" href="{{asset('build/images/favicon.png')}}" type="image/x-icon"/>
		<title>
			{% block title website_name %}
		</title>
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}
	</head>

	<body>
		{% for type, messages in app.flashes(['success', 'error', 'info', 'warning']) %}
			{% for message in messages %}
				<div class="alert alert-{{ type }} alert-dismissible fade show" role="alert">
					<strong>{{ type }}!</strong>
					{{ message }}
					<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
				</div>

			{% endfor %}
		{% endfor %}

		{% include 'layouts/partials/_navbar.html.twig' %}

		<main role="main"> {% block body %}{% endblock %}
			</main>

			{% include 'layouts/partials/_footer.html.twig' %}

			{% block javascripts %}
				{{ encore_entry_script_tags('app') }}
			{% endblock %}
		</body>
	</html>
